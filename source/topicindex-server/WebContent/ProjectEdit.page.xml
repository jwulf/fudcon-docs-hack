<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/ProjectList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{projectHome.wire}"/>
   <action execute="#{projectHome.populate}"/>

   <param name="projectFrom"/>
   <param name="projectProjectId" value="#{projectHome.projectProjectId}"/>
   
   <navigation from-action="#{projectHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/Project.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{projectHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/Project.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{projectHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/ProjectList.xhtml"/>
      </rule>
   </navigation>

</page>
