<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
	no-conversation-view-id="/UserList.xhtml" login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{userHome.wire}"/>
   <action execute="#{userHome.populate}"/>

   <param name="userFrom"/>
   <param name="userUserId" value="#{userHome.userUserId}"/>


   <navigation from-action="#{userHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/User.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{userHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/User.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{userHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/UserList.xhtml"/>
      </rule>
   </navigation>

</page>
