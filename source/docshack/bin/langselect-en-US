#!/bin/bash
# langselect-en-us

# we start in assembly/publican

# We get arguments:
# name bookdir productname

echo Lang select started in `pwd`

name=$1
bookdir=$2
productname=$3

if [ ! -f tmp/en-US/html-single/index.html ]; then
  echo "No html-single source to build to deployable"
  DEPLOYBUILDERROR=1
fi 

if [ -f tmp/en-US/html-single/index.html ]; then
  if [ -d tmp/deploy ]; then
    rm -rf tmp/deploy
  fi

  if [ -d tmp/deploy ]; then
    echo "ERROR: Could not remove previous deployable."
    DEPLOYBUILDERROR=1
  fi

  if [ ! -d tmp/deploy ]; then
    mkdir tmp/deploy      
    echo "Creating deployable for $name"
    cp -r tmp/en-US/html-single tmp/deploy/$name
    if [ ! -f tmp/deploy/$name/index.html ]; then
      echo "ERROR: Could not create deployable"
      BUILDERROR=1
    else
      echo "Created deployable tmp/deploy/$name"

      # index.cfg will be read by the index regeneration script
      # and used to generate administration links
      echo "BOOKDIR=$bookdir" > tmp/deploy/$name/index.cfg
      echo $productname >> tmp/deploy/$name/index.cfg
      echo `date` > tmp/deploy/$name/build.time
    fi
  fi
fi
